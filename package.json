{
  "name": "@fex-to/precise-compact",
  "version": "1.0.0",
  "description": "Intl.NumberFormat wrapper that shows compact notation (K, M, thousand, million, लाख, 万) ONLY for exact numbers. Prevents precision loss - returns regular format (1,234) for approximations instead of misleading compact notation.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "types",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=18.17 || >=20"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fex-to/precise-compact"
  },
  "bugs": {
    "url": "https://github.com/fex-to/precise-compact/issues"
  },
  "homepage": "https://github.com/fex-to/precise-compact#readme",
  "keywords": [
    "intl",
    "number-format",
    "compact-notation",
    "thousand",
    "million",
    "localization",
    "i18n",
    "formatting",
    "precision",
    "exact",
    "indian-numbering",
    "lakh",
    "crore",
    "wan",
    "chinese-numbers",
    "japanese-numbers",
    "arabic-numbers",
    "currency",
    "word-based",
    "typescript"
  ],
  "author": {
    "name": "fex-to",
    "url": "https://github.com/fex-to"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/fex-to"
  },
  "packageManager": "npm@11.6.2",
  "overrides": {
    "glob": "^11.0.0",
    "sucrase": "^3.35.0",
    "magicast": "^0.5.1"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsup",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run --coverage",
    "bench": "tsx benchmarks/performance.bench.ts",
    "examples": "tsx examples/locale-examples.ts",
    "verify": "npm run typecheck && npm run lint && npm run test && npm run build",
    "prepare": "husky",
    "prepublishOnly": "npm run verify",
    "release": "release-it",
    "release:patch": "release-it patch --ci --verbose",
    "release:minor": "release-it minor --ci --verbose",
    "release:major": "release-it major --ci --verbose"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@release-it/conventional-changelog": "^10.0.2",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.10",
    "@vitest/eslint-plugin": "^1.4.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "release-it": "^19.0.6",
    "rimraf": "^6.1.0",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.10"
  }
}
